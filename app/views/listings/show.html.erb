<h1>Listings#show</h1>
<p>Find me in app/views/listings/show.html.erb</p>

<%= @listing %>

<div class="card text-center">
  <div class="card-header">
    <h1> <%= @listing.title %> </h1>
  </div>
  <div class="card-body">
    <img class="card-img-top" src="..." alt="Card image cap"/>
    <h5 class="card-title"><%= @listing.title %> </h5>
    <p class="card-text"> <%= @listing.content%> </p>
    <%= button_to('Schedule Booking', new_listing_booking_path(@listing), class: 'btn btn-primary', method: :get) %>
    <%= button_to('View Tutor', user_path(@listing.tutor), class: 'btn btn-primary', method: :get) %>
  </div>
  <div class="card-footer text-muted">
    <%= @listing.created_at %>
  </div>
</div>