<h1>Reviews#index</h1>
<p>Find me in app/views/reviews/index.html.erb</p>
<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-7">
      <div class="card p-3 py-4">
        <div class="text-center">
          <% @reviews.each do |review| %>
            <div class="card text-center">
              <div class="card-header">
                <%= review.tutor.name %> <%= review.rating %>/5
              </div>
              <div class="card-body">
                <p class="card-text"> <%= review.content%> </p>
              </div>
              <div class="card-footer text-muted">
                <span> last updated: <%= review.updated_at  %> </span>
              </div>
            </div>
            <%= button_to('Edit', edit_review_path(review.id), class: 'btn btn-primary', method: :get)%>
            <%= button_to('Delete', review_path(review.id), class: 'btn btn-primary', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete your review? " } }) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
